<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/lblModalidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Modalidades"
            android:textColor="@color/project_text_secondary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMd1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/project_button_color"
            android:clickable="false"
            android:text="Futsal"
            android:textColor="@color/project_text_secondary_color"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btnMd2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblModalidades" />

        <Button
            android:id="@+id/btnMd2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/project_button_color"
            android:clickable="false"
            android:text="Handebol"
            android:textColor="@color/project_text_secondary_color"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMd1"
            app:layout_constraintTop_toBottomOf="@+id/lblModalidades" />

        <TextView
            android:id="@+id/lblItensDisponiveis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Itens DisponÃ­veis"
            android:textColor="@color/project_text_secondary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMd1" />

        <Button
            android:id="@+id/btnMd3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/project_button_color"
            android:clickable="false"
            android:text="Bolas de Futsal"
            android:textColor="@color/project_text_secondary_color"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btnMd2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblItensDisponiveis" />

        <Button
            android:id="@+id/btnMd4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/project_button_color"
            android:clickable="false"
            android:text="Cones de PVC"
            android:textColor="@color/project_text_secondary_color"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMd1"
            app:layout_constraintTop_toBottomOf="@+id/lblItensDisponiveis" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
